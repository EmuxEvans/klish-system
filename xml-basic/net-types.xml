<?xml version="1.0" encoding="UTF-8"?>
<CLISH_MODULE xmlns="http://clish.sourceforge.net/XMLSchema"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://clish.sourceforge.net/XMLSchema
                     http://clish.sourceforge.net/XMLSchema/clish.xsd">

  <PTYPE name="net_hostname"
         pattern="[[:graph:]]+"
         help="Hostname"/>
  <PTYPE name="net_interface"
         pattern="[[:graph:]]+"
         help="Interface"/>

  <PTYPE name="ip_port"
         method="integer"
         pattern="1..65535"
         help="Port"/>

  <PTYPE name="ip4_address"
         pattern="[0-9\.]+"
         help="IPv4 address"/>
  <PTYPE name="ip4_prefix"
         pattern="[0-9\.]+\/[0-9]+"
         help="IPv4 prefix"/>

  <PTYPE name="ip6_address"
         pattern="[0-9a-fA-F:]+"
         help="IPv6 address"/>
  <PTYPE name="ip6_prefix"
         pattern="[0-9a-fA-F:]+\/[0-9]+"
         help="IPv6 prefix"/>

  <PTYPE name="mac_address"
         pattern="[0-9a-fA-F:]+"
         help="MAC address"/>

  <PTYPE name="vlan_id"
         method="integer"
         pattern="1..4095"
         help="VLAN id"/>
  <PTYPE name="vlan_name"
         pattern="[[:graph:]]+"
         help="VLAN name"/>

</CLISH_MODULE>
